<% @todos.each_slice(1) do |one_todo| %>
<div class="card-deck">
<% one_todo.each do |todo| %>

  <div class="card">
    <div class="card-body">
      <div class="form-check">
        <%= check_box_tag(:completed, todo.completed, todo.completed, disabled: true) %>
        <% label :completed, class:'form-check-label', for:'todo.completed' %>
        <%= todo.description%> </div>
      <p class="card-text"><small class="text-muted">Last updated <%= todo.created_at %></small></p>
      <%= link_to "Show", show_todos_path(todo), class: 'btn btn-info' %>
      <%= link_to "Edit", edit_todo_path(todo), class: 'btn btn-info' %>
      <%= link_to "Complete", complete_todo_path(todo), class: 'btn btn-info' %>
      <%= link_to 'Delete', delete_todo_path(todo), method: :delete, data: { confirm: 'Estas seguro?' }, class: 'btn btn-danger'%>


    </div>
  </div>
<% end %>
</div>
<% end %>
